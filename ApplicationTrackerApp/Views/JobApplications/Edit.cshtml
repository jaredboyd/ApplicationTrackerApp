@model ApplicationTrackerApp.Models.JobApplication

@{
	ViewData["Title"] = "Edit Application";
}

<style>
	textarea {
		resize: none;
		height: 9em;
	}
</style>

<h2>Edit Application</h2>
<p>@Model.Company - @Model.Position</p>

<form asp-action="Edit" method="post">
	<input type="hidden" asp-for="Id" />

	<div class="form-group">
		<label asp-for="Company"></label>
		<input asp-for="Company" value="@Model.Company" class="form-control" />
		<span asp-validation-for="Company" class="text-danger"></span>
	</div>

	<div class="form-group mt-2">
		<label asp-for="Position"></label>
		<input asp-for="Position" value="@Model.Position" class="form-control" />
		<span asp-validation-for="Position" class="text-danger"></span>
	</div>

	<div class="form-group mt-2">
		<label asp-for="Notes"></label>
		<textarea asp-for="Notes" value="@Model.Notes" class="form-control"></textarea>
		<span asp-validation-for="Notes" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary mt-3">Save</button>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}